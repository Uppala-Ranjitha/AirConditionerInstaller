<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@android:color/holo_blue_light"
    tools:context=".MainActivity">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/mail_id"
        android:layout_centerVertical="true"
        android:text="@string/mail"
        style="@style/AppTheme.loginStyle"/>
   <EditText
       android:layout_width="wrap_content"
       android:layout_height="wrap_content"
       android:id="@+id/mail_text"
       android:layout_centerVertical="true"
       android:layout_toRightOf="@id/mail_id"
       android:layout_toEndOf="@+id/mail_id"/>
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/password_id"
        android:layout_below="@id/mail_id"
        android:text="@string/password"
        style="@style/AppTheme.loginStyle"/>
    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/password_text"
        android:layout_below="@id/mail_id"
        android:layout_toRightOf="@id/password_id"
        android:layout_toEndOf="@+id/password_id"/>
    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/login"
        android:layout_centerHorizontal="true"
        android:layout_below="@id/password_text"
        android:text="@string/go_to_login" />
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/no_account"
        android:textSize="13sp"
        android:textColor="@android:color/holo_blue_dark"
        android:layout_below="@id/login"
        android:layout_toLeftOf="@id/signup"
        android:id="@+id/noactive"/>
    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/sign_up"
        android:layout_below="@id/login"
        android:layout_centerHorizontal="true"
        android:id="@+id/signup"
        android:onClick="goToSignUp"/>


</RelativeLayout>